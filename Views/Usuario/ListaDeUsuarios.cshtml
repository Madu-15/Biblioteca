@model List<Usuario>
<h1>Usuarios cadastrados no sistema</h1>

<p class="text-danger">@ViewData["Mensagem"]</p>
        <table class="table"> 
            <thead>
                <tr>
                <th scope="row">Nome</th>
                <th scope="row">Login</th>
                <th scope="row">Tipo</th>
                </tr>
            </thead>


            <tbody>
                @foreach(Usuario u in Model)
                {
                <tr>
                    <td>@u.Nome</td>
                    <td>@u.Login</td>
                    @if(u.Tipo==Usuario.ADMIN){
                        <TD>Administrador</TD>
                    } 
                    else {
                        <td>Padrão</td>
                    }
                    <td><a href="editarUsuario?=@u.id">Editar</a></td>
                    <td><a href="excluirUsuario?=@u.id">Excluir</a></td>
                </tr>
                }
        </table>
  
  <a href="RegistrarUsuarios">Registras novo usuário</a>